<form class="signup-form card">
    <h3 class="card-header">Sign Up</h2>
  <div>
    <label class='form-label' for="username-signup">Username:</label>
    <input class='post-title' type="text" id="username-signup" autocomplete="off"/>
  </div>
  <div>
    <label class='form-label' for="email-signup">Email:</label>
    <input class='post-title' type="text" id="email-signup" autocomplete="off"/>
  </div>
  <div>
    <label class='form-label' for="password-signup">Password:</label>
    <input class='post-title' type="password" id="password-signup" autocomplete="off"/>
  </div>
  <div>
    <button type="submit" class="btn">Sign Up!</button>
  </div>
  <div>
    <a href="/login">Login instead</a>
  </div>
</form>

<script src="/javascript/signup.js"></script>