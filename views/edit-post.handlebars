<article class="card">
  <h3 class="card-header">
    Edit Post
  </h3>
  <form class="edit-post-form">
    <div>
      <input class='post-title' name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      <input class='form-input' id="post-text" name="post-text" autocomplete="off" value="{{post.post_text}}"/>
    </div>
    <button class='btn edit-post-form' type="submit">Update Post</button>
    <button type="button" class="delete-post-btn btn">Delete</button>
  </form>
</article>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>